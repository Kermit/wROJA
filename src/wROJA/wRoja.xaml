<Window x:Class="wROJA.wRoja"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="wRoJa" Height="500" Width="1050" Margin="0,0,0,0" Padding="5" UseLayoutRounding="False" Background="#FFE5E5E5">

    <DockPanel>
        <Button x:Name="CloseButton" Content="Zamknij" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="0,5,5,5" />
        <TabControl x:Name="MainTabControl" Margin="5,5,5,0" Padding="0">
            <TabItem x:Name="LinesTabItem" Header="Linie">
                <Frame Source="LinesPage.xaml" />
            </TabItem>
            <TabItem x:Name="StopsTabItem" Header="Przystanki">
                <Frame Source="StopsPage.xaml" />                
            </TabItem>
            <TabItem x:Name="SearchTabItem" Header="Wyszukaj trasę">
                <Frame Source="SearchPage.xaml" />
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
